{
  "name": "key",
  "productName": "Key",
  "version": "1.0.1",
  "description": "simple cross-platform keyboard mapper.",
  "repository": "https://github.com/pacocoursey/key",
  "author": "Paco Coursey",
  "license": "MIT",
  "main": "./src/main.js",
  "scripts": {
    "postintall": "electron-rebuild",
    "start": "electron .",
    "lint": "eslint --ignore-path .gitignore .",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "rebuild": "electron-rebuild"
  },
  "dependencies": {
    "electron-better-ipc": "^0.1.2",
    "electron-settings": "^3.1.4",
    "electron-unhandled": "^2.1.0",
    "htm": "^2.1.1",
    "preact": "^8.4.2",
    "robotjs": "^0.5.1",
    "styled-jsx": "^3.2.1"
  },
  "devDependencies": {
    "electron": "^4.1.3",
    "electron-builder": "^19.56.2",
    "electron-packager": "^13.1.1",
    "electron-rebuild": "^1.7.3",
    "electron-reloader": "^0.2.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0"
  },
  "build": {
    "appId": "com.pacocoursey.key",
    "files": [
      "**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "portable"
    },
    "dmg": {
      "contents": [
        {
          "x": 175,
          "y": 225
        },
        {
          "x": 365,
          "y": 225,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
